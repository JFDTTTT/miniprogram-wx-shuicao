/* pages/index/list/list-item/list-item.wxss */
.list-item{
  width: 344rpx;
  background: #FFFFFF;
  border-radius: 8rpx;
  overflow: hidden;
  margin-bottom: 16px;
}

.item-image-container{
  position: relative;
  width: 100%;
  height: 344rpx;
}

.item-image{
  position: relative;
  width: 100%;
  height: 100%;
}

.item-image-num{
  position: absolute;
  left: 16rpx;
  bottom: 16rpx;
  height: 44rpx;
  line-height: 44rpx;
  background: rgba(0, 0, 0, 0.6);
  padding: 0 8rpx;
  border-radius: 4rpx;
  color: #FFFFFF;
}

.item-bottom{
  padding: 16px 24px;
}

.item-name{
  font-size: 28rpx;
  font-family: PingFangSC-Medium, PingFang SC;
  font-weight: bold;
  color: #222222;
  line-height: 40rpx;
}

.item-name-english{
  font-size: 24rpx;
  font-family: PingFangSC-Regular, PingFang SC;
  color: #646464;
  line-height: 34rpx;
  margin-top: 4px;
}